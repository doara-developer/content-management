{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": ["es2018", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "@client/*": ["./client/*"],
            "@server/*": ["./server/*"],
            "@common/*": ["./common/*"]
        },
        "moduleResolution": "node",
        "types": ["jest"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "__test__/**/*.ts",
        "types/**/*.ts"
    ]
}
